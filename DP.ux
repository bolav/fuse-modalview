<Panel Name="p">
	<Rectangle Background="#000a" />
<DockPanel Margin="15,0,15,0" Padding="10" Background="#ffff">
	<StackPanel Dock="Top">
		<Text Value="$title" TextAlignment="Center" />
		<Rectangle Margin="5">
			<Stroke Width="1">
				<StaticSolidColor Background="#BABABAFF" />
			</Stroke>
		</Rectangle>
	</StackPanel>
	<ScrollView>
		<Text Value="$text" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" TextColor="#171616ff" Margin="20" />
	</ScrollView>
	<Grid Dock="Bottom" ColumnCount="2">
		<Button Text="$button1" />
		<Button Text="$button2" />
	</Grid>
</DockPanel>
</Panel>